{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declarationDir": "dist/types",
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "newLine": "LF",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": false,
        "noUnusedLocals": true,
        "outDir": "dist",
        "sourceMap": true,
        "strictNullChecks": false,
        "target": "ES6"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}
